.details{
    background: #fff;
}

.details .topimage{
    width: 100%;
}

.details .content{
    margin: 10px;
}

.details .content .price {
    color: #f2270c;
}

.details .content .price text{
    color: #f2270c;
    display: inline-block;
    font-family: JDZH-Regular;
    font-size: 30px;
    line-height: 30px;
}

.details .content .title{
    font-weight: 600;
    line-height: 60px;
}

.details .introduce {
  margin-top: 20px; /* 设置距离上面框的距离为 20px */
}
.details .introduce image{
    width: 100%;
}

.details-box {
  border-radius: 10px; /* 设置椭圆角 */
  background-color: rgba(128, 128, 128, 0.5); /* 设置背景色为灰色透明 */
  padding: 10px; /* 设置内边距 */
  margin-top: 10px;
}

.detail-item {
  margin-left: 10px; /* 文字距离左边的距离 */
  margin-bottom: 5px;
}

.detail-title {
  font-weight: bold; /* 让标题加粗 */
  margin-bottom: 10px; /* 添加一些下边距 */
}

.topimage {
  width: 100%;
  height: 190px;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
}

.mid_detail {
  border-radius: 10px; /* 设置四个角为圆角 */
  border: 1px solid #ccc; /* 添加边框 */
  padding: 20px; /* 添加内边距 */
}
