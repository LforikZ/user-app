/* pages/buy/buy.wxss */

/* 设置整个页面的背景颜色 */
.page {
  background-color: #f5f5f5;
}

/* 设置商品卡片的样式 */
.van-card {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 设置商品标题的样式 */
.title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx;
}

/* 设置商品图片的样式 */
.image {
  width: 100%;
  height: 400rpx; /* 调整图片高度 */
}

/* 设置商品价格的样式 */
.price {
  font-size: 24rpx;
  color: #ff0000;
  margin-left: 20rpx;
}

/* 设置底部按钮区域的样式 */
.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

/* 设置加号按钮的样式 */
.plus-button {
  width: 120rpx !important;
  height: 120rpx !important;
  font-size: 50rpx;
  color: #ffffff;
  background-color: #ff0000;
  border-radius: 10rpx;
  margin-right: 20rpx; /* 增加右边距 */
}

/* 设置减号按钮的样式 */
.minus-button {
  width: 120rpx !important;
  height:120rpx !important;
  font-size: 50rpx;
  color: #333333;
  background-color: #dddddd;
  border-radius: 10rpx;
  margin-left: 20rpx; /* 增加左边距 */
}


