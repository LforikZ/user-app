/* 修改 header 样式 */
.header {
  padding: 20px;
  overflow: hidden;
  clear: both;
  background-color: #f5f5f5; /* 修改背景色为浅灰色 */
  border-bottom: 1px solid #ddd; /* 添加底部边框 */
}

.header image {
  width: 70px;
  height: 70px; /* 添加高度保持图片正圆 */
  border-radius: 50%;
  float: left;
}

.header text {
  float: left;
  font-size: 18px; /* 调大字体 */
  color: #333;
  margin-top: 25px;
  margin-left: 20px; /* 增加左边距 */
}

/* 新增退出登录按钮样式 */
.logout-button {
  background-color: #f44336; /* 红色背景 */
  color: #fff; /* 白色文字 */
  font-size: 16px; /* 字体大小 */
  padding: 10px 20px; /* 上下左右内边距 */
  border-radius: 5px; /* 圆角 */
  margin-top: 10px; /* 上边距 */
  cursor: pointer; /* 鼠标指针样式 */
}
